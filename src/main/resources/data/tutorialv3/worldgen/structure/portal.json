  "start_height": {
    "absolute": 60
  },

  "project_start_to_heightmap": "WORLD_SURFACE_WG",

  "biomes": "#tutorialv3:has_structure/portal",
  "adapt_noise": true,
  "spawn_overrides": {
    "monster": {
      "bounding_box": "piece",
      "spawns": [
        {
          "type": "minecraft:illusioner",
          "weight": 1,
          "minCount": 1,
          "maxCount": 2
        },
        {
          "type": "minecraft:pillager",
          "weight": 2,
          "minCount": 1,
          "maxCount": 4
        }
      ]
    }
  }
